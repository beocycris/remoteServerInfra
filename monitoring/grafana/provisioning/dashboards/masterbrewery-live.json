    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "5s",
    "time": {
        "from": "now-2h",
        "to": "now"
    },
    "templating": {
        "list": [
            {
                "type": "constant",
                "name": "bucket",
                "label": "Influx Bucket",
                "query": "brewery",
                "current": {
                    "text": "brewery",
                    "value": "brewery"
                }
            },
            {
                "type": "custom",
                "name": "range",
                "label": "Zeitfenster",
                "query": "now-15m,now-1h,now-2h,now-6h,now-24h",
                "current": {
                    "text": "now-2h",
                    "value": "now-2h"
                }
            }
        ]
    },
