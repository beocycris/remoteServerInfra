            "targets": [
                {
                    "refId": "A",
                    "query": "from(bucket: \"${bucket}\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"brewery\" and r._field == \"Sensor_HLT\")\n  |> last()"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "celsius",
                    "min": 0,
                    "max": 105,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
