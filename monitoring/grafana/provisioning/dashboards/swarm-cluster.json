{
    "title": "Swarm Cluster Overview",
    "uid": "swarm-cluster-overview",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "time": {
        "from": "now-30m",
        "to": "now"
    },
    "annotations": {
        "list": [
            {
                "builtIn": 1,
                "datasource": {
                    "type": "datasource",
                    "uid": "grafana"
                },
                "enable": true,
                "hide": true,
                "iconColor": "rgba(0, 211, 255, 1)",
                "name": "Annotations & Alerts",
                "type": "dashboard"
            }
        ]
    },
    "editable": true,
    "graphTooltip": 0,
    "panels": [
        {
            "type": "table",
            "title": "Nodes: CPU (%)",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "label_replace(100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{job=\"node\", mode=\"idle\"}[5m]))), \"node\", \"$1\", \"instance\", \"([^:]+):.*\")",
                    "instant": true,
                    "format": "table",
                    "legendFormat": "{{node}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "decimals": 2
                },
                "overrides": []
            },
            "options": {
                "showHeader": true,
                "cellHeight": "sm"
            }
        },
        {
            "type": "table",
            "title": "Nodes: RAM Used (%)",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 0
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "label_replace(100 * (1 - (node_memory_MemAvailable_bytes{job=\"node\"} / node_memory_MemTotal_bytes{job=\"node\"})), \"node\", \"$1\", \"instance\", \"([^:]+):.*\")",
                    "instant": true,
                    "format": "table",
                    "legendFormat": "{{node}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "decimals": 2
                },
                "overrides": []
            },
            "options": {
                "showHeader": true,
                "cellHeight": "sm"
            }
        },
        {
            "type": "table",
            "title": "Nodes: Running Services (count)",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 16,
                "y": 0
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "count by (node) (count by (node, container_label_com_docker_swarm_service_name) (label_replace(container_last_seen{job=\"docker\",container_label_com_docker_swarm_service_name!=\"\"}, \"node\", \"$1\", \"instance\", \"([^:]+):.*\")))",
                    "instant": true,
                    "format": "table",
                    "legendFormat": "{{node}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "none",
                    "decimals": 0
                },
                "overrides": []
            },
            "options": {
                "showHeader": true,
                "cellHeight": "sm"
            }
        },
        {
            "type": "table",
            "title": "Services: Running Replicas",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "count by (service) (label_replace(container_last_seen{job=\"docker\",container_label_com_docker_swarm_service_name!=\"\"}, \"service\", \"$1\", \"container_label_com_docker_swarm_service_name\", \"(.*)\"))",
                    "instant": true,
                    "format": "table",
                    "legendFormat": "{{service}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "none",
                    "decimals": 0
                },
                "overrides": []
            },
            "options": {
                "showHeader": true,
                "cellHeight": "sm"
            }
        },
        {
            "type": "table",
            "title": "Replica Distribution: Service per Node",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 8
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "count by (node, service) (label_replace(label_replace(container_last_seen{job=\"docker\",container_label_com_docker_swarm_service_name!=\"\"}, \"service\", \"$1\", \"container_label_com_docker_swarm_service_name\", \"(.*)\"), \"node\", \"$1\", \"instance\", \"([^:]+):.*\"))",
                    "instant": true,
                    "format": "table",
                    "legendFormat": "{{node}} {{service}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "none",
                    "decimals": 0
                },
                "overrides": []
            },
            "options": {
                "showHeader": true,
                "cellHeight": "sm"
            }
        }
    ]
}